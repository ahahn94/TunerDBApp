<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.ahahn94.tunerdb.MainActivity">

    <FrameLayout
        android:id="@+id/background"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radioGroupBank"
                android:layout_margin="2dp"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/darker_gray">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonRed"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"
                    android:text="R"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:buttonTint="@android:color/holo_red_dark" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonGreen"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"
                    android:text="G"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:buttonTint="@android:color/holo_green_dark" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonBlue"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"
                    android:text="B"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:buttonTint="@android:color/holo_blue_dark" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonWhite"
                    android:layout_weight="0"
                    android:text="W"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:textColor="@android:color/background_light"
                    android:background="@android:color/darker_gray"
                    android:buttonTint="@android:color/background_light" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonYellow"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"
                    android:text="Y"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:textColor="@android:color/holo_orange_light"
                    android:buttonTint="@android:color/holo_orange_light" />

                <RadioButton
                    android:text="M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonMagenta"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:textColor="@color/colorAccent"
                    android:buttonTint="@color/colorAccent" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:id="@+id/radioGroupCell"
                android:background="@android:color/background_light">

                <RadioButton
                    android:text="E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonE"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonA"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonD"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonG"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonB"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtone"
                    android:layout_weight="1" />
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edittextEntry"
                android:background="@android:color/background_light"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSearch"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <Button
                    android:text="Save Changes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSave"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="View All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonViewDB"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp" />

                <Button
                    android:text="Reset Database"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonResetDB"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:backgroundTint="@android:color/background_light">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textviewDB1"
                        android:background="@android:color/background_light"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="textStart"
                        android:layout_marginRight="2dp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
